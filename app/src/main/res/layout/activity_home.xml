<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".HomeActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

            <TextView
                    android:id="@+id/result_emailLabel"
                    android:text="Email :"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="24sp" />

            <TextView
                    android:id="@+id/result_emailData"
                    android:hint="E-mail"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

            <TextView
                    android:id="@+id/result_uidLabel"
                    android:text="UID :"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="24sp" />

            <TextView
                    android:id="@+id/result_uidData"
                    android:hint="UID"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >


            <TextView
                    android:text="อุณหภูมิ :"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"

                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/tempC"
                    android:hint="อุณหภูมิ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp" />
            <TextView
                    android:text="C°"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"

                    android:textSize="20sp" />
                <TextView
                        android:text="อุณหภูมิ :"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp" />

                <TextView
                        android:id="@+id/tempF"
                        android:hint="อุณหภูมิ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp" />
                <TextView
                        android:text="F°"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"

                        android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >


                <TextView
                        android:text="ความชื้น :"
                        android:textStyle="bold"

                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp" />

                <TextView
                        android:id="@+id/humidity"
                        android:hint="ความชื้น"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp" />
                <TextView
                        android:text="%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"

                        android:textSize="20sp" />

                <Button
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:id="@+id/btn_logout"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/logout1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="1dp"
                >

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_edit"
                    android:layout_gravity="center"
                android:background="@color/black"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >

            <Button
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:id="@+id/btn_info"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/adddataset"/>

            <Button
                    android:layout_width="200dp"
                    android:layout_height="140dp"
                    android:id="@+id/Tembtn"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/pumptype" />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

            <Button
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btn_dash"
                    android:layout_gravity="center"
                    android:background="@drawable/graph"
                    />

            <Button
                    android:layout_width="200dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="30dp"
                    android:id="@+id/btn_set"
                    android:layout_gravity="center"
                    android:background="@drawable/slantype" />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            />


    </LinearLayout>


</RelativeLayout>