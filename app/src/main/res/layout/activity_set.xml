<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SetActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/titlecs">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="112dp"
                    android:gravity="center"
                    android:text="กรอกข้อมูล"
                    android:textSize="40dp"
                    ></TextView>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:hint="melon1"
                    android:enabled="false"
                    android:ems="10"
                    android:id="@+id/editTextgene" />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:hint="อายุ :: (สัปดาห์)"
                    android:ems="10"
                    android:id="@+id/editTextage" />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:hint="ความสูงต้น :: (ซม.)"
                    android:ems="10"
                    android:id="@+id/editTextHigh" />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:hint="จำนวนใบ :: (ใบ)"
                    android:ems="10"
                    android:id="@+id/editTextLetf" />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:hint="เส้นผ่าศูนย์กลางลำต้น :: (ซม.)"
                    android:ems="10"
                    android:id="@+id/editTextDiameter" />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:hint="ความกว้างใบ :: (ซม.)"
                    android:ems="10"
                    android:id="@+id/editTextWideLeft" />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:hint="จำนวนข้อ :: (ข้อ)"
                    android:ems="10"
                    android:id="@+id/editTextClause" />
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:hint="คลอโรฟิลล์ ::(จำนวน)"
                    android:ems="10"
                    android:id="@+id/editTextChlorophyll" />

            <Button
                    android:text="เพิ่มข้อมูล"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/set_button" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>